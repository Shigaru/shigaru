<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>shigarucontact</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>2014-06-02</creationDate>
	<author>MURCIALITO</author>
	<authorEmail>info@shigaru.com</authorEmail>
	<authorUrl>http://www.shigaru.com</authorUrl>
	<copyright>All rights reserved by Shigaru.com</copyright>
	<license>GPL 2.0</license>
	<!--  The version string is recorded in the components table -->
	<version>1.00</version>
	<!-- The description is optional and defaults to the name -->
	<description>Displays contact form for shigaru</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>shigarucontact.php</filename>
		<filename>index.html</filename>
		<filename>views/index.html</filename>
		<filename>views/shigarucontact/index.html</filename>
		<filename>views/shigarucontact/view.html.php</filename>
		<filename>views/shigarucontact/tmpl/default.php</filename>
		<filename>views/shigarucontact/tmpl/index.html</filename>
	</files>
	<languages>
			<!-- Any language files included with the module -->
			<language tag="en-GB">lang/en-GB.com_shigarucontact.ini</language>
			<language tag="en-ES">lang/es-ES.com_shigarucontact.ini</language>
		</languages>

	<administration>
		<!-- Administration Menu Section -->
		<menu>shigarucontact</menu>

		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<filename>shigarucontact.php</filename>
			<filename>index.html</filename>
		</files>  
	</administration>
</install>
