<cbinstall version="1.0.0" type="plugin" group="user">
	<name>CB Menu Page Tab</name>
	<author>Brian Shaughnessy</author>
	<creationDate>September, 2009</creationDate>
	<copyright>Brian Shaughnessy</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>brian@lcdservies.biz</authorEmail>
	<authorUrl>www.lcdservices.biz</authorUrl>
	<version>1.0</version>
	<description>
		This plugin displays a menu item page in a CB tab.
	</description>
	<files>
		<filename plugin="menupage">menupage.php</filename>
		<filename>index.html</filename>
	</files>

	<tabs>
		<tab name="MenuPage" description="This tab displays a menu item page in a CB tab." class="getMenuPageTab" fields="0" position="cb_tabmain" displaytype="tab">
			<params>
				<param name="menu_id" type="text" label="Menu Item ID" default="" description="Enter the id (ItemID) for the menu item you wish to include in a tab." />
			</params>
			<fields>
			</fields>
		</tab>
	</tabs>
	<install>
		<queries>
		</queries>
	</install>
	<uninstall>
	</uninstall>
</cbinstall>