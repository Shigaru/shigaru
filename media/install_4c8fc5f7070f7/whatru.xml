	<authorEmail>chatdilan@yahoo.com</authorEmail>

	<authorUrl>http://slk.xtreemhost.com</authorUrl>

	<version>1.2 RC</version>

	<description>

		This plugin allows users to add status message to his-her profile. Developed by Chatura Dilan Perera, Sri Lanka. Contact: chatdilan@yahoo.com

	</description>

	<files>

		<filename plugin="whatru">whatru.php</filename>

    		<filename>index.html</filename>

    		<filename>Sajax.php</filename>

		<filename>whatru.css</filename>

	</files>

	<params>		

	</params>

	

	<tabs>

		<tab name="CB What are you doing" description="This plugin allows users to add status message to his-her profile." class="getWhatruTab" fields="0" position="cb_head" displaytype="html">

			<params>

				<param name="wrutext" type="text" label="What are you doing text" default="Click here to enter what are you doing right now" description="What are you doing Text" />

				<param name="wrutextboxsize" type="text" label="Text box size" default="50" description="Text box size" />

				<param name="wrutextboxmax" type="text" label="Text box max length" default="150" description="Text box max length" />

				<param name="wrutextgo" type="text" label="Go button text" default="Go" description="Go button text" />

				<param name="wrutextclear" type="text" label="Clear button text" default="Clear" description="Clear button text" />

			</params>

			<fields>
				<field type="text" title="User Status Message" name="cb_rustatus" description="Display User Status Message" registration="0" readonly="1" profile="0" />
       			<field type="text" title="User Status Time" name="cb_rustatustime" description="Display User Status Message Time" registration="0" readonly="1" profile="0"/>
			</fields>			

		</tab>

	</tabs>

