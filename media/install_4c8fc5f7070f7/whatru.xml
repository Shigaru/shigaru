<cbinstall version="1.0.3" type="plugin" group="user">

	<name>CB What are you doing</name>

	<author>Chatura Dilan Perera</author>

	<creationDate>2008-12-21</creationDate>

	<copyright>(C) 2008 Chatura Dilan Perera</copyright>

