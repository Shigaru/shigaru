
<install type="plugin" version="1.5.0" group="system" method="upgrade">
    <name>System - EasyCalcCheck PLUS</name>
    <version>1.5-14-1</version>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <author>Viktor Vogel</author>
    <authoremail>admin@kubik-rubik.de</authoremail>
    <authorurl>http://www.kubik-rubik.de</authorurl>
    <copyright>Copyright 2010 Viktor Vogel. All rights reserved.</copyright>
    <creationDate>29-Dec-2011</creationDate>
    <description>Provides Joomla! core forms with extra fields.</description>
    <files folder="site">
        <filename plugin="easycalccheckplus">easycalccheckplus.php</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/warning.png</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/akismet.php</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/mollom.php</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/honeypot.php</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/recaptchalib.php</filename>
        <filename plugin="easycalccheckplus">easycalccheckplus/autofill.php</filename>
        <filename plugin="easycalccheckplus">bottrap/page.restrictor.log</filename>
    </files>
    <languages folder="site/language">
        <language tag="de-DE">de-DE/de-DE.plg_system_easycalccheckplus.ini</language>
        <language tag="el-GR">el-GR/el-GR.plg_system_easycalccheckplus.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_easycalccheckplus.ini</language>
        <language tag="it-IT">it-IT/it-IT.plg_system_easycalccheckplus.ini</language>
        <language tag="es-ES">es-ES/es-ES.plg_system_easycalccheckplus.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_easycalccheckplus.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_system_easycalccheckplus.ini</language>
        <language tag="hu-HU">hu-HU/hu-HU.plg_system_easycalccheckplus.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.plg_system_easycalccheckplus.ini</language>
        <language tag="cs-CZ">cs-CZ/cs-CZ.plg_system_easycalccheckplus.ini</language>
    </languages>
    <params>
        <param name="@spacer" type="spacer" default="Check type" />
        <param name="type_calc" type="radio" default="1" label="Calc check" description="Calc check desc">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="operator" type="radio" default="2" label="OPERATOR" description="OPERATORDESC">
            <option value="0">+</option>
            <option value="1">-</option>
            <option value="2">RANDOM</option>
        </param>
        <param name="operand" type="radio" default="2" label="OPERAND" description="OPERANDDESC">
            <option value="2">2</option>
            <option value="3">3</option>
        </param>
        <param name="negativ" type="radio" default="0" label="NEGATIV" description="NEGATIVDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="converttostring" type="radio" default="0" label="CONVERT" description="CONVERTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="max_value" type="text" default="20" label="Maximum value for every number" description="Maximum value desc" />
        <param name="type_hidden" type="radio" default="1" label="Hidden field" description="Hidden field desc">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="type_time" type="radio" default="1" label="TIMEHIDDEN" description="TIMEHIDDENDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="type_time_sec" type="text" default="5" label="TIMEHIDDENSEC" description="TIMEHIDDENSECDESC" />
        <param name="recaptcha" type="radio" default="0" label="RECAPTCHA" description="RECAPTCHADESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="recaptcha_theme" type="radio" default="0" label="RECAPTCHATHEME" description="RECAPTCHATHEMEDESC">
            <option value="0">Red</option>
            <option value="1">White</option>
            <option value="2">Blackglass</option>
            <option value="3">Clean</option>
        </param>
        <param name="recaptcha_publickey" type="text" default="" size="60" label="RECAPTCHAPUBLICKEY" description="RECAPTCHAPUBLICKEYDESC" />
        <param name="recaptcha_privatekey" type="text" default="" size="60" label="RECAPTCHAPRIVATEKEY" description="RECAPTCHAPRIVATEKEYDESC" />
        <param name="question" type="radio" default="0" label="QUESTION" description="QUESTIONDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="question_q" type="text" default="" size="50" label="QUESTIONQ" description="QUESTIONQDESC" />
        <param name="question_a" type="text" default="" size="50" label="QUESTIONA" description="QUESTIONADESC" />
        <param name="warn_ref" type="radio" default="0" label="Warning Reference" description="Warning Reference desc">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="@spacer" type="spacer" default="EXTRA" />
        <param name="user_reg" type="radio" default="1" label="User registration" description="User registration desc">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="contact" type="radio" default="1" label="Contact form" description="Contact form desc">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="alfcontact" type="radio" default="0" label="ALFCONTACT" description="ALFCONTACTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="alpharegistration" type="radio" default="0" label="ALPHAREGISTRATION" description="ALPHAREGISTRATIONDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="cbe" type="radio" default="0" label="CBE" description="CBEDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="communitybuilder" type="radio" default="0" label="COMMUNITYBUILDER" description="COMMUNITYBUILDERDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="dfcontact" type="radio" default="0" label="DFCONTACT" description="DFCONTACTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="easybookreloaded" type="radio" default="0" label="EASYBOOKRELOADED" description="EASYBOOKRELOADEDDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="flexicontact" type="radio" default="0" label="FLEXICONTACT" description="FLEXICONTACTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="jobboard" type="radio" default="0" label="JOBBOARD" description="JOBBOARDDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="jomsocial" type="radio" default="0" label="JOMSOCIAL" description="JOMSOCIALDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="kunena" type="radio" default="0" label="KUNENA" description="KUNENADESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="phocaguestbook" type="radio" default="0" label="PHOCAGUESTBOOK" description="PHOCAGUESTBOOKDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="qcontacts" type="radio" default="0" label="QCONTACTS" description="QCONTACTSDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="virtuemart" type="radio" default="0" label="VIRTUEMART" description="VIRTUEMARTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="encode" type="radio" default="2" label="ENCODE" description="ENCODEDESC">
            <option value="1">Yes</option>
            <option value="2">YESVALIDATE</option>
            <option value="0">No</option>
        </param>
        <param name="encode_virtuemart" type="radio" default="0" label="ENCODEVIRT" description="ENCODEVIRTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="autofill_values" type="radio" default="1" label="KEEPVALUES" description="KEEPVALUESDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="onlyguests" type="radio" default="1" label="ONLYGUESTS" description="ONLYGUESTSDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="beez" type="radio" default="0" label="BEEZ" description="BEEZDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="rockettheme" type="radio" default="0" label="ROCKETTHEME" description="ROCKETTHEMEDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="artisteer" type="radio" default="0" label="ARTISTEER" description="ARTISTEERDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="@spacer" type="spacer" default="BOTSTOP" />
        <param name="sqlinjection-lfi" type="radio" default="1" label="SQLINJECTIONANDLOCALFILEINCLUSION" description="SQLINJECTIONANDLOCALFILEINCLUSIONDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="stopforumspam" type="radio" default="0" label="STOPFORUMSPAM" description="STOPFORUMSPAMDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="honeypot" type="radio" default="0" label="HONEYPOT" description="HONEYPOTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="honeypot_key" type="text" default="" label="HONEYPOTKEY" description="HONEYPOTKEYDESC" />
        <param name="akismet" type="radio" default="0" label="AKISMET" description="AKISMETDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="akismet_key" type="text" default="" label="AKISMETKEY" description="AKISMETKEYDESC" />
        <param name="mollom" type="radio" default="0" label="MOLLOM" description="MOLLOMDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="mollom_publickey" type="text" default="" size="50" label="MOLLOMPUBLICKEY" description="MOLLOMPUBLICKEYDESC" />
        <param name="mollom_privatekey" type="text" default="" size="50" label="MOLLOMPRIVATEKEY" description="MOLLOMPRIVATEKEYDESC" />
        <param name="botscout" type="radio" default="0" label="BOTSCOUT" description="BOTSCOUTDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="botscout_key" type="text" default="" label="BOTSCOUTKEY" description="BOTSCOUTKEYDESC" />
        <param name="@spacer" type="spacer" default="BOTTRAPDEFAULT" />
        <param name="bottrap" type="radio" default="0" label="BOTTRAP" description="BOTTRAPDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="btWhitelistIP" type="textarea" default="" label="BTWHITELISTIP" description="BTWHITELISTIPDESC" rows="3" cols="25" />
        <param name="btWhitelistIPRange" type="textarea" default="" label="BTWHITELISTIPRANGE" description="BTWHITELISTIPRANGEDESC" rows="3" cols="25" />
        <param name="btWhitelistUA" type="textarea" default="" label="BTWHITELISTUA" description="BTWHITELISTUADESC" rows="3" cols="25" />
        <param name="btBlacklistIP" type="textarea" default="" label="BTBLACKLISTIP" description="BTBLACKLISTIPDESC" rows="3" cols="25" />
        <param name="btBlacklistIPRange" type="textarea" default="" label="BTBLACKLISTIPRANGE" description="BTBLACKLISTIPRANGEDESC" rows="3" cols="25" />
        <param name="btBlacklistUA" type="textarea" default="" label="BTBLACKLISTUA" description="BTBLACKLISTUADESC" rows="3" cols="25" />
        <param name="@spacer" type="spacer" default="BACKEND PROTECTION" />
        <param name="backendprotection" type="radio" default="0" label="BACKENDPROTECTION" description="BACKENDPROTECTIONDESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="token" type="text" default="" label="TOKEN" description="TOKENDESC" />
